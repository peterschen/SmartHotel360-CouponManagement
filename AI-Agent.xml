<?xml version="1.0" encoding="utf-8"?>
    <ApplicationInsightsAgent>
      <Instrumentation>

        <!-- Collect remote dependency data -->
        <BuiltIn enabled="true">
           <!-- Disable Redis or alter threshold call duration above which arguments are sent.
               Defaults: enabled, 10000 ms -->
           <Jedis enabled="true" thresholdInMS="1000"/>

           <!-- Set SQL query duration above which query plan is reported (MySQL, PostgreSQL). Default is 10000 ms. -->
           <MaxStatementQueryLimitInMS>1000</MaxStatementQueryLimitInMS>
        </BuiltIn>

        <!-- Collect data about caught exceptions
             and method execution times -->

        <Class name="com.example.fabrikam.HotelCoupon.controller.TestController">
           <Method name="hello"
               reportCaughtExceptions="true"
               reportExecutionTime="true" />
        </Class>

        <Class name="com.example.fabrikam.HotelCoupon.controller.LoginController">
           <Method name="login"
               reportCaughtExceptions="true"
               reportExecutionTime="true" />
        </Class>

        <Class name="com.example.fabrikam.HotelCoupon.controller.GuestController">
           <Method name="index"
               reportCaughtExceptions="true"
               reportExecutionTime="true" />
        </Class>

      </Instrumentation>
    </ApplicationInsightsAgent>